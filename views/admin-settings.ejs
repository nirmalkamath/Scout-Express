<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Settings • Scout Express</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
  <header>
    <a href="/">Home</a>
  </header>

  <main>
    <div class="dashboard-container">
      <div class="dashboard-header">
        <div class="dashboard-title">Admin Settings</div>
        <div>
          <a href="/admin-dashboard" class="back-btn">← Back to Dashboard</a>
          <form method="POST" action="/logout" style="display: inline;">
            <button type="submit" class="logout-btn">Logout</button>
          </form>
        </div>
      </div>

      <% if (typeof success !== 'undefined' && success) { %>
        <div style="color: #28a745; font-size: 0.9rem; margin-bottom: 1rem; padding: 0.5rem; background: #d4edda; border: 1px solid #c3e6cb; border-radius: 4px;"><%= success %></div>
      <% } %>

      <% if (typeof error !== 'undefined' && error) { %>
        <div style="color: #d93025; font-size: 0.9rem; margin-bottom: 1rem; padding: 0.5rem; background: #f8d7da; border: 1px solid #f5c6cb; border-radius: 4px;"><%= error %></div>
      <% } %>

      <div class="settings-grid">
        <div class="settings-section">
          <div class="section-title">Change Username</div>
          <div class="section-content">
            <form method="POST" action="/admin/change-username">
              <div class="form-group">
                <label for="newUsername">New Username</label>
                <input type="text" id="newUsername" name="newUsername" value="<%= typeof currentUsername !== 'undefined' ? currentUsername : '' %>" placeholder="Enter new username" required>
              </div>
              <button type="submit" class="settings-btn">Update Username</button>
            </form>
          </div>
        </div>

        <div class="settings-section">
          <div class="section-title">Change Password</div>
          <div class="section-content">
            <form method="POST" action="/admin/change-password">
              <div class="form-group">
                <label for="currentPassword">Current Password</label>
                <input type="password" id="currentPassword" name="currentPassword" placeholder="Enter current password" required>
              </div>
              <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password" required>
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required>
              </div>
              <button type="submit" class="settings-btn">Update Password</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer>
    &copy; 2025 Scout Express. All rights reserved.
  </footer>
</body>
</html>