<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard â€¢ Scout Express</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
  <header>
    <a href="/">Home</a>
  </header>

  <main>
    <div class="dashboard-container">
      <div class="dashboard-header">
        <div class="dashboard-title">Admin Dashboard</div>
        <form method="POST" action="/logout" style="display: inline;">
          <button type="submit" class="logout-btn">Logout</button>
        </form>
      </div>

      <% if (typeof success !== 'undefined' && success) { %>
        <div style="color: #28a745; font-size: 0.9rem; margin-bottom: 1rem; padding: 0.5rem; background: #d4edda; border: 1px solid #c3e6cb; border-radius: 4px;"><%= success %></div>
      <% } %>

      <% if (typeof error !== 'undefined' && error) { %>
        <div style="color: #d93025; font-size: 0.9rem; margin-bottom: 1rem; padding: 0.5rem; background: #f8d7da; border: 1px solid #f5c6cb; border-radius: 4px;"><%= error %></div>
      <% } %>

      <div class="dashboard-grid">
        <div class="dashboard-card">
          <div class="card-title">User Management</div>
          <div class="card-content">Manage candidates, employers, and other users.</div>
        </div>
        <div class="dashboard-card">
          <div class="card-title">Job Postings</div>
          <div class="card-content">Review and manage job listings.</div>
        </div>
        <div class="dashboard-card">
          <div class="card-title">Analytics</div>
          <div class="card-content">View platform statistics and reports.</div>
        </div>
        <a href="/admin/settings" class="dashboard-card settings-link">
          <div class="card-title">Settings</div>
          <div class="card-content">Configure account settings and preferences.</div>
        </a>


      </div>
    </div>
  </main>

  <footer>
    &copy; 2025 Scout Express. All rights reserved.
  </footer>
</body>
</html>